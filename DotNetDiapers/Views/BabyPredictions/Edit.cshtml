@model DotNetDiapers.Models.BabyPrediction

@{
    ViewData["Title"] = "Edit Guess";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3 class="redTitle">Edit Baby Prediction</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Due_Date" class="control-label"></label>
                <input asp-for="Due_Date" class="form-control" />
                <span asp-validation-for="Due_Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Birth_Weight" class="control-label"></label>
                <input asp-for="Birth_Weight" class="form-control" />
                <span asp-validation-for="Birth_Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Baby_Gender" class="control-label"></label>
                <select asp-for="Baby_Gender" class="form-control">
                    <option value="Boy">Boy</option>
                    <option value="Girl">Girl</option>
                </select>
                <span asp-validation-for="Baby_Gender" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Baby_Name" class="control-label"></label>
                    <input asp-for="Baby_Name" class="form-control" />
                    <span asp-validation-for="Baby_Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GuestId" class="control-label"></label>
                    <select asp-for="GuestId" class="form-control" asp-items="ViewBag.GuestId"></select>
                    <span asp-validation-for="GuestId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
</form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
